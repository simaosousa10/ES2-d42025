@page "/AdminFeatures"
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="container mt-5">
    <!-- Título -->
    <div class="text-center mb-4">
        <h3 class="fw-bold">Admin Features</h3>
        <p class="text-muted">Painel de administração para gestão de conteúdos</p>
    </div>

    <!-- Botões principais -->
    <div class="row g-3">
        <div class="col-md-4">
            <button class="btn btn-primary w-100 p-3" @onclick="NavigationToProductOverview">
                <i class="bi bi-box-seam me-2"></i> Products
            </button>
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary w-100 p-3" @onclick="NavigationToStoresList">
                <i class="bi bi-shop me-2"></i> Stores
            </button>
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary w-100 p-3" @onclick="NavigationToCategories">
                <i class="bi bi-tags me-2"></i> Categories
            </button>
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary w-100 p-3" @onclick="NavigationToListUsers">
                <i class="bi bi-people me-2"></i> Users
            </button>
        </div>
        <div class="col-md-4">
            <!-- Botão de Relatórios -->
            <button class="@GetReportButtonClass()" @onclick="ToggleReports">
                <i class="bi bi-bar-chart me-2"></i> Reports
            </button>

            <!-- Sub-opções visíveis apenas se expandedReports == true -->
            @if (expandedReports)
            {
                <div class="mt-2 d-grid gap-2">
                    <button class="btn btn-outline-primary" @onclick="NavigationToReportStores">
                        Stores General Report
                    </button>
                    <button class="btn btn-outline-primary" @onclick="NavigationToReportStore">
                        Store Specific Report
                    </button>
                    <button class="btn btn-outline-primary" @onclick="NavigationToReportProduct">
                        Product Report
                    </button>
                </div>
            }
        </div>


        <div class="col-md-4">
            <button class="btn btn-primary w-100 p-3" @onclick="NavigationToMessages">
                <i class="bi bi-chat-dots me-2"></i> Mensagens
            </button>
        </div>
    </div>
</div>

@code {
    private bool expandedReports = false;

    public void ToggleReports()
    {
        expandedReports = !expandedReports;
    }

    private string GetReportButtonClass()
    {
        return expandedReports
            ? "btn btn-outline-primary w-100 p-3"
            : "btn btn-primary w-100 p-3";
    }

    public void NavigationToProductOverview()
    {
        Navigation.NavigateTo("products");
    }

    public void NavigationToStoresList()
    {
        Navigation.NavigateTo("stores");
    }

    public void NavigationToReportStores()
    {
        Navigation.NavigateTo("/reports/general");
    }

    public void NavigationToReportStore()
    {
        Navigation.NavigateTo("/reports/store");
    }

    public void NavigationToReportProduct()
    {
        Navigation.NavigateTo("/reports/product");
    }

    public void NavigationToMessages()
    {
        Navigation.NavigateTo("/admin/messages");
    }

    public void NavigationToListUsers()
    {
        Navigation.NavigateTo("/ListUsers");
    }
    
    public void NavigationToCategories()
    {
        Navigation.NavigateTo("/categories");
    }
}