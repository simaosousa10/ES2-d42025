@page "/DashBoard"

<h3>Dashboard</h3>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;">
    <!-- Cards Resumo -->
    <div style="border: 1px solid #ccc; border-radius: 10px; padding: 20px;">
        <h4>Total Produtos</h4>
        <p style="font-size: 24px; font-weight: bold;">120</p>
    </div>

    <div style="border: 1px solid #ccc; border-radius: 10px; padding: 20px;">
        <h4>Produtos Disponíveis</h4>
        <p style="font-size: 24px; font-weight: bold;">95</p>
    </div>

    <div style="border: 1px solid #ccc; border-radius: 10px; padding: 20px;">
        <h4>Meteorologia Atual</h4>
        <p>22°C, Sol</p>
    </div>
</div>

<br />

<!-- Gráfico Placeholder -->
<div style="border: 1px solid #ccc; border-radius: 10px; padding: 20px; margin-bottom: 20px;">
    <h4>Produtos vendidos nos últimos 7 dias</h4>
    <p><i>(Gráfico aqui futuramente)</i></p>
</div>

<!-- Produtos em Destaque -->
<div style="border: 1px solid #ccc; border-radius: 10px; padding: 20px;">
    <h4>Produtos em Destaque</h4>
    <ul>
        <li>Produto A</li>
        <li>Produto B</li>
        <li>Produto C</li>
    </ul>
</div>

<!-- Acesso rápido -->
<div style="margin-top: 20px;">
    <button style="margin-right: 10px; padding: 10px 20px;">Adicionar Produto</button>
    <button style="padding: 10px 20px;">Ver Produtos</button>
</div>

